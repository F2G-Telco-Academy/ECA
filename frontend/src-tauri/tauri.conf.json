{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "Extended Cellular Analyzer",
  "version": "0.1.0",
  "identifier": "com.eca.analyzer",
  "build": {
    "beforeDevCommand": "npm run dev",
    "beforeBuildCommand": "npm run build",
    "devUrl": "http://localhost:3001",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "Extended Cellular Analyzer",
        "width": 1400,
        "height": 900,
        "minWidth": 1200,
        "minHeight": 700,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  },
  "plugins": {
    "shell": {
      "open": true,
      "scope": [
        {
          "name": "open-url",
          "cmd": "open",
          "args": true
        }
      ]
    },
    "fs": {
      "scope": [
        "$APPDATA/*",
        "$APPDATA/**",
        "$RESOURCE/*",
        "$RESOURCE/**"
      ]
    },
    "http": {
      "scope": [
        "http://localhost:8080/**",
        "http://127.0.0.1:8080/**"
      ]
    },
    "dialog": {
      "all": true
    },
    "notification": {
      "all": true
    }
  }
}
